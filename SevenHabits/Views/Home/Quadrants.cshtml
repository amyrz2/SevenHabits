                        }
                        @if (task.DueDate != null)
                        {
                            <p class="card-text">Due Date: @task.DueDate?.ToShortDateString()</p>

                        }
                        <a asp-controller="Home" asp-action="Edit" asp-route-taskid="@task.TaskID" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-controller="Home" asp-route-taskid="@task.TaskID" class="btn btn-danger">Delete</a>
                        <form asp-action="MarkComplete" asp-controller="Home" asp-route-taskid="@task.TaskID" class="d-inline">
                            <button type="submit" class="btn btn-success">Mark Complete</button>
                        </form>
                    </div>
                </div>
            }
        }
    </div>
</div>

