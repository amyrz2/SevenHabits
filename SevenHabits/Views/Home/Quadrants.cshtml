                            @*<button type="submit" class="btn btn-success">Mark Complete</button>*@
                        </form>
                    </div>
                </div>
            }
        }
    </div>


    <div class="col-sm-3">
        <h3>Quadrant III: Not Important / Urgent</h3>
        <hr />
        @foreach (var task in Model)
        {
            @if (task.Quadrant == 3 && !task.Completed)
